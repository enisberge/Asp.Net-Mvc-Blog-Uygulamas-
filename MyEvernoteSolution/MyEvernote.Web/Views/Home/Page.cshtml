@using MyEvernote.Entities
@model  Note

@{
    ViewBag.Title = "Page";
}

<div class="container my-3">
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("_PartialCategories")
        </div>
        <div class="col-md-9 mt-4">
            <div class="row">
                <div class="col-md-12">
                    <h3>@Model.Title</h3>
                </div>
                <div class="col-md-12">
                    <img style="object-fit: cover" src="~/Images/Note/@Model.NoteImageFileName" alt="avatar" width="500" height="200">
                </div>
                <div class="col-md-12">
                    <p>
                        @Html.Raw(Model.Text)
                    </p>
                </div>
            </div>
        </div>


    </div>
</div>

@section footer{
    @Html.Partial("_PartialFooter")
}

