@using MyEvernote.BusinessLayer
@using MyEvernote.Entities
@using MyEvernote.Web.Models
@{
    List<Category> list = CacheHelper.GetCategoriesFromCache();

}
<h4 class="mt-4">Kategoriler</h4>
<div class="list-group">
    <a href="@Url.Action("Index","Home")" class="list-group-item"><i class="fas fa-arrow-circle-right"></i> Tümü</a>
    @foreach (Category category in list)
    {
        <a href="/Home/ByCategory/@category.Id" title="@category.Description" class="list-group-item"><i class="fas fa-arrow-circle-right"></i> @category.Title</a>

    }

</div>
